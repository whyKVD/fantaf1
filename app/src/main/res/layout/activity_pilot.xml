<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilotActivity"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/nameANDsecondName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="30dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/secondName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/name"
            android:textSize="30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/permNumANDconstructor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/nameANDsecondName"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/permNum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="30dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/constructor"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/permNum"
            android:textSize="30dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/nationality"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/permNumANDconstructor"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>


    <ScrollView
        android:id="@+id/standingsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nationality"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/standings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nationality"
            android:layout_alignParentBottom="true"
            android:paddingTop="20dp"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</RelativeLayout>